<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slaby.android_5_remastered.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/board"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weiner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/winnerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoText="false"
                    android:freezesText="false"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="40dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weiner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/now_plays_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:autoText="false"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:paddingLeft="25dp"
                    android:paddingTop="55dp"
                    android:text="@string/now_plays"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/nowTura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:paddingLeft="10dp"
                    android:paddingTop="23dp"
                    app:srcCompat="@drawable/circle" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:columnCount="3"
                android:duplicateParentState="false"
                android:rowCount="3">

                <ImageView
                    android:id="@+id/point0"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/circle" />

                <ImageView
                    android:id="@+id/point1"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/cross" />

                <ImageView
                    android:id="@+id/point2"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/circle" />

                <ImageView
                    android:id="@+id/point3"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/cross" />

                <ImageView
                    android:id="@+id/point4"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/cross" />

                <ImageView
                    android:id="@+id/point5"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/cross" />

                <ImageView
                    android:id="@+id/point6"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/circle" />

                <ImageView
                    android:id="@+id/point7"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/circle" />

                <ImageView
                    android:id="@+id/point8"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_margin="5dp"
                    android:paddingTop="30dp"
                    app:srcCompat="@drawable/circle" />
            </GridLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
